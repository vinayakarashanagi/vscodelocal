apiVersion: apps/v1
kind: Deployment
metadata:
  name: spring-boot-k8s-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: spring-boot-k8s
  template:
    metadata:
      labels:
        app: spring-boot-k8s
    spec:
      containers:
      - name: spring-boot-k8s
        image: adijaiswal/shopping-cart:latest
        ports:
        - containerPort: 8070
---
apiVersion: v1
kind: Service
metadata:
  name: spring-boot-k8ssvc
spec:
  selector:
    app: spring-boot-k8s
  ports:
  - protocol: TCP
    port: 8070
    targetPort: 8070
  type: NodePort